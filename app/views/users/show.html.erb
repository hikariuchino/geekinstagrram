<h1>users#show</h1>
<% if @user.image? %>                                                              
    <%= image_tag @user.image.url, class: "rounded-circle", size: "150x150" %>
<% else %>
    <%= image_tag "default.png", class: "rounded-circle", size: "150x150" %>
<% end %>

<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.posts.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
<% end %>

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_posts.each do |t| %>
    <%= t.user.name %>
    <%= t.body %>
<% end %>
<!-- ここまで-->

<%= link_to "Post一覧に戻る", posts_path %>